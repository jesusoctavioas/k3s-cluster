[Unit]
Description=Lightweight Kubernetes {{ k3s_agent | capitalize }}
Documentation=https://k3s.io
Wants=network-online.target
After=network-online.target

[Service]
Type=notify
Delegate=yes
EnvironmentFile=-/etc/default/%N
EnvironmentFile=-/etc/systemd/system/{{ k3s_service }}.service.env
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
ExecStart=/usr/local/bin/k3s {{ k3s_agent }} {{ control_k3s_service_args | default('') }} {{ node_k3s_service_args | default('') }}
KillMode=process
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
